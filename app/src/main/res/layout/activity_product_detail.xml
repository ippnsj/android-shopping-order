<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="product"
            type="woowacourse.shopping.ui.model.ProductModel" />

        <variable
            name="recentProduct"
            type="woowacourse.shopping.ui.model.ProductModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".productdetail.ProductDetailActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/product_detail_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/white" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/product_detail_cart_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_detail_toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp">

                <ImageView
                    android:id="@+id/product_detail_picture"
                    loadPicture="@{product.picture}"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/ic_launcher_background" />

                <TextView
                    android:id="@+id/product_detail_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginTop="16dp"
                    android:text="@{product.title}"
                    android:textColor="#333333"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_detail_picture"
                    tools:text="[든든] 동원 스위트콘 [든든] 동원 스위트콘 [든든] 동원 스위트콘 [든든] 동원 스위트콘 [든든] 동원 스위트콘 [든든] 동원 스위트콘 [든든] 동원 스위트콘 [든든] 동원 스위트콘 [든든] 동원 스위트콘 [든든] 동원 스위트콘" />

                <View
                    android:id="@+id/space_between_title_price"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="13dp"
                    android:background="#AAAAAA"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_detail_title" />

                <TextView
                    android:id="@+id/product_detail_price_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/product_detail_price"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/space_between_title_price" />

                <TextView
                    android:id="@+id/product_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:text="@{@string/product_price(product.price)}"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/product_detail_price_header"
                    tools:text="99,800원" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/latest_recent_product_layout"
                    isVisible="@{recentProduct != null}"
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/latest_recent_product_background"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_detail_price_header">

                    <TextView
                        android:id="@+id/latest_recent_product_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/latest_recent_product_header"
                        android:textColor="@color/primary"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/latest_recent_product_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{recentProduct.title}"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toStartOf="@id/latest_recent_product_price"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/latest_recent_product_header"
                        tools:text="[든든] 동원 스위트콘 [든든] 동원 스위트콘 [든든] 동원 스위트콘" />

                    <TextView
                        android:id="@+id/latest_recent_product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{@string/product_price(recentProduct.price)}"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@id/latest_recent_product_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="99,800원" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <Button
            android:id="@+id/product_detail_cart_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/primary"
            android:text="@string/product_detail_cart_button"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
