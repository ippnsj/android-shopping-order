<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginVertical="6dp"
        android:background="@drawable/cart_product_list_background"
        android:padding="12dp">

        <TextView
            android:id="@+id/order_history_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/show_order_history_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="주문 번호 : 3" />

        <TextView
            android:id="@+id/order_history_preview_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@id/order_history_final_price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="[든든] 동원 스위트콘, PET보틀-정사각(370ml), 동원" />

        <TextView
            android:id="@+id/show_order_history_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_order_history_detail_text"
            android:textColor="#A4A4A4"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/order_history_total_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="#333333"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@id/order_history_final_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/show_order_history_detail"
            tools:text="총 5개" />

        <TextView
            android:id="@+id/order_history_final_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="183,400원" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
